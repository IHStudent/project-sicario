@using Blazorise.Icons.Material
@inherits LayoutComponentBase
@inject BrandProvider Brand
@inject IConfiguration Config

<Layout Sider="true">
    <LayoutSider>
        <LayoutSiderContent>
            <Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
                 Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
                <BarToggler />
                <BarBrand>
                    <BarItem>
                        <BarLink To="">
                            <BarIcon IconName="MaterialIcons.Layers" />
                            @Brand.AppName
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarMenu>
                    <BarStart>
                        <AuthorizeView Policy="@Policies.IsUser">
                            <BarItem>
                                <BarLink To="build">
                                    <BarIcon IconName="IconName.Code"/>
                                    Build
                                </BarLink>
                            </BarItem>
                        </AuthorizeView>
                        <AuthorizeView Policy="@Policies.IsUploader">
                            <BarItem>
                                <BarLink To="upload">
                                    <BarIcon IconName="IconName.FileUpload"/>
                                    Upload
                                </BarLink>
                            </BarItem>
                        </AuthorizeView>
                        @* This is so not ready for production *@
                        @*<AuthorizeView>
                            <BarItem>
                                <BarLink To="test">
                                    <BarIcon IconName="MaterialIcons.Settings" />
                                    Test Patch
                                </BarLink>
                            </BarItem>
                        </AuthorizeView>*@
                    </BarStart>
                    <BarEnd>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.Info" />
                                    About
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem To="/about">
                                        About @Brand.AppName
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/faq">
                                        FAQ
                                    </BarDropdownItem>
                                    <AuthorizeView>
                                    @if (Config.GetDocsPath(out var docsPath))
                                    {
                                        <BarDropdownItem To="@docsPath">
                                            Documentation
                                        </BarDropdownItem>
                                    }
                                    </AuthorizeView>
                                    <BarDropdownItem To="https://www.humblegames.com/games/projectwingman/" Target="Target.Blank">
                                        Project Wingman
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                        <BarItem>
                            <BarLoginDisplay />
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </Bar>
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed="true">
            @*<Bar Breakpoint="Breakpoint.Desktop" Background="Background.Primary" ThemeContrast="ThemeContrast.Dark">
                <BarBrand>
                    <BarItem>
                        <BarLink To="">
                            
                        </BarLink>
                    </BarItem>
                </BarBrand>
            </Bar>*@
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is4.OnAll">
            <CascadingValue Value="@_snackbar" Name="SnackbarStack">
                @Body
                <SnackbarStack @ref="_snackbar" Interval="2000" Location="SnackbarStackLocation.Left"/>
            </CascadingValue>
        </LayoutContent>
    </Layout>
</Layout>

