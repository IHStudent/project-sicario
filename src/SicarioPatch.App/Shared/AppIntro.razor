@inject BrandProvider Brand
<Jumbotron Background="Background.Primary" Margin="Margin.Is4.FromBottom">
    <JumbotronTitle Size="JumbotronTitleSize.Is3">Welcome to @Brand.AppName</JumbotronTitle>
    <JumbotronSubtitle>
        @Brand.AppName is an <strong>experimental</strong> new way of building and merging certain mods for Project Wingman. The @Brand.ShortName Patcher can attempt to "merge" multiple data table edits together into a single mod to improve compatibility and user choices.
    </JumbotronSubtitle>
    @if (ChildContent != null)
    {
        <Divider></Divider>
        @ChildContent
    }
</Jumbotron>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}
